<button class="tab-item @StateClass" role="tab" aria-selected="@AriaSelected" type="button" tabindex="@TabIndex" @onclick="OnSelect">
    <span>
        @if (Icon != Components.Icon.IconStyle.None)
        {
            <Icon Style="Icon" aria-hidden="true" tabindex="-1" />
        }
        @Label
    </span>
</button>
