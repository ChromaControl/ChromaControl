@if (DialogService.Dialogs.Any())
{
    <div class="dialog-container">
        @foreach (var dialog in DialogService.Dialogs)
        {
            <div @key="dialog.Key" style="@(dialog.Value == DialogService.Dialogs.Last().Value ? "" : "display: none;")">
                @dialog.Value
            </div>
        }
    </div>
}
